{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true,
        "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
     "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": ["no-unsanitized"],
    "rules": {
        "semi": 2,
        "no-unsanitized/method": "error",
        "no-unsanitized/property": "error"
    }
}
